#include <stdio.h>

void merge(int a[], int n1, int b[], int n2, int c[]) {
    int i=0, j=0, k=0;
    while(i<n1 && j<n2) {
        if(a[i] < b[j]) c[k++] = a[i++];
        else c[k++] = b[j++];
    }
    while(i < n1) c[k++] = a[i++];
    while(j < n2) c[k++] = b[j++];
}

int main() {
    int a[50], b[50], c[100], n1, n2, i;
    printf("Enter size of first sorted list: "); scanf("%d", &n1);
    printf("Enter sorted elements:\n");
    for(i=0; i<n1; i++) scanf("%d", &a[i]);
    printf("Enter size of second sorted list: "); scanf("%d", &n2);
    printf("Enter sorted elements:\n");
    for(i=0; i<n2; i++) scanf("%d", &b[i]);

    merge(a, n1, b, n2, c);
    printf("Merged sorted list:\n");
    for(i=0; i<n1+n2; i++) printf("%d ", c[i]);
    return 0;
}
