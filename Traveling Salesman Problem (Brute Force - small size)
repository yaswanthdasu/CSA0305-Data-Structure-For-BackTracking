#include <stdio.h>

#define N 4

int tsp(int graph[N][N], int pos, int visited, int n, int count, int cost, int ans) {
    if(count == n && graph[pos][0]) {
        if(cost + graph[pos][0] < ans)
            ans = cost + graph[pos][0];
        return ans;
    }

    for(int i=0; i<n; i++) {
        if((visited & (1 << i)) == 0 && graph[pos][i]) {
            ans = tsp(graph, i, visited | (1 << i), n, count+1, cost + graph[pos][i], ans);
        }
    }
    return ans;
}

int main() {
    int graph[N][N] = {
        {0, 10, 15, 20},
        {10, 0, 35, 25},
        {15, 35, 0, 30},
        {20, 25, 30, 0}
    };

    int ans = 1000000;
    ans = tsp(graph, 0, 1, N, 1, 0, ans);
    printf("Minimum cost of traveling salesman is %d\n", ans);
    return 0;
}
